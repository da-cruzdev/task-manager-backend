generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TaskStatus {
  PENDING
  IN_PROGRESS
  DONE
}

enum Role {
  ADMIN
  USER
}


model User {
  id Int          @id       @default(autoincrement())
  username        String
  email           String    @unique
  password        String
  refreshToken    String?
  role            Role      @default(USER)

  createAt        DateTime  @default(now())
  updatedAt       DateTime  @updatedAt()

  createdtasks    Task[]    @relation("userTaskRelation")
  assignedTasks   Task[]    @relation("assignedToRelation")
  

  @@map("users")
}


model Task {
  id Int @id @default(autoincrement())
  title String
  description String
  status TaskStatus @default(PENDING)

  deadline DateTime 

  createAt DateTime @default(now())
  updatedAt DateTime @default(now())

  user User? @relation("userTaskRelation", fields: [userId], references: [id])
  assignedTo User? @relation("assignedToRelation", fields: [assignedToId], references: [id])
  userId Int
  assignedToId Int
  
  @@map("tasks")
}
